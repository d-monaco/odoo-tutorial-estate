<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="comment">The user will be able to manage properties assigned to them or to nobody.</field>
    </record>

    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[ref('estate_group_user')]"/>
        <field name="comment">The user will be able to configure the system and oversee every property.</field>
    </record>

    <record id="estate_property_responsibility_rule" model="ir.rule">
        <field name="name">Allows a property with an assigned salesperson to be managed only by them</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[ref('estate_group_user')]"/>
        <field name="domain_force">[
            '|', ('salesperson_id', '=', user.id),
                ('salesperson_id', '=', False)
        ]</field>
    </record>

    <record id="estate_property_manger_supervision_rule" model="ir.rule">
        <field name="name">Allows a property to always be managealbe by a manger</field>
        <field name="model_id" ref="estate.model_estate_property"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="groups" eval="[Command.link(ref('estate.estate_group_manager'))]"/>
    </record>


</odoo>