<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data>

    <record id="res_partner_estate_action" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">list,kanban,form</field>
        <field name="context">{'search_default_buyer': True}</field>
    </record>


    <!-- This inherits to change res_partner form -->
    <record id="res_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.estate</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            <xpath expr="//notebook" position="inside">
                <page string="Bought Properties">
                    <list string="Properties">
                        <field name="property_ids" readonly="True"/>
                    </list>
                </page>
            </xpath>

        </field>
    </record>


    <record id="res_partner_estate_view_search" model="ir.ui.view">
        <field name="name">res.partner.estate.search.inherit</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">

    
            <!-- Just adds a default filter to the list views of res_partner to show only buyers -->
            <xpath expr="//filter[@name='type_company']" position="after">
                <separator/>
                <filter string="Buyers Only" name="buyer" domain="[
                    ('property_ids','>','0'),
                ]"/>
            </xpath>

        </field>
    </record>


</data>
</odoo>